                <div class="col-lg-9 formCon">
                    <div class="card">
                        <div class="card-header">
                           <div class="row">
                               <div class="col-lg-8">
                                <h1 class="mb-0">Forms</h1>
                               </div>
                               <div class="col-lg-4">
                                <a class="nav-user-img" href="javascript:void(0)" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="/assets/images/avatar-1.jpg" alt="" class="user-avatar-md rounded-circle"></a>
                                <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                                    <div class="nav-user-info">
                                    <h5 class="mb-0 text-white nav-user-name">Dashboard</h5>
                                    <span class="status"></span><span class="ml-2">Available</span>
                                    </div>
                                    <a class="dropdown-item" href="/user/logout"><i class="fas fa-power-off mr-2"></i>Logout</a>
                                </div>
                                <a href="/user/form/create" class="btn btn-success" style="float: right;">Create</a>
                               </div>
                           </div>
                            <!-- <p>This example shows DataTables and the Buttons extension being used with the Bootstrap 4 framework providing the styling.</p> -->
                        </div>
                        <div class="card-body">
                            <% if(errorMessage.length > 0) {%>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <%= errorMessage %>
                                        <a href="javascript:void(0)" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </a>
                                </div>
                                <% } %>
                                    <div class="table-responsive">
                                        <table id="example3" class="table" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Heading</th>
                                                    <th>Creation Date</th>
                                                    <th>Number of Responses</th>
                                                    <th>View Responses</th>
                                                    <th>Link</th>
                                                    <th>#</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% forms.forEach(e => {%>
                                                    <tr>
                                                        
                                                        <td>
                                                            <%=e.heading%>
                                                        </td>
                                                        <td>
                                                            <%= e.createdAt.toDateString().substring(4) %>
                                                        </td>
                                                        <td>
                                                            <%= e.responses.length %>
                                                        </td>
                                                        <td>
                                                            <a href="/user/form/response/<%=e.formCode%>" class="btn btn-sm btnSuccess">View</a>
                                                        </td>
                                                        <td>
                                                            <div class="form-group">
                                                                <input type="text" id="<%=e._id%>" readonly value="http://localhost:3000/forms/<%= e.formCode %>" class="form-contorl form-control-sm">
                                                            </div>
                                                            <button class="btn btn-success btn-sm" onclick="copy('<%= e._id %>')"><i class="fas fa-copy"></i></button>
                                                        </td>
                                                        <td class="sorting_1">
                                                            <i class=" fas fa-pencil-alt" onclick=""></i>
                                                            &nbsp;
                                                            &nbsp;
                                                            &nbsp;
                                                            <i class=" fas fa-trash-alt" onclick="location.replace('/user/form/delete/<%=e._id%>')"></i>
                                                        </td>
                                                    </tr>
                                                    <%}) %>
                                            </tbody>
                                        </table>
                                    </div>
                        </div>
                    </div>
